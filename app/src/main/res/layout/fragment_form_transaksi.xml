<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".FormTransaksiFragment">

    <!-- AppBarLayout dan Toolbar SUDAH DIHAPUS dari sini -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Tombol Pengeluaran/Pemasukan -->
        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/toggle_button_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:checkedButton="@id/btn_pengeluaran">

            <Button
                android:id="@+id/btn_pengeluaran"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pengeluaran"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btn_pemasukan"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pemasukan"
                android:textAllCaps="false"/>

        </com.google.android.material.button.MaterialButtonToggleGroup>

        <!-- Input Tanggal -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Tanggal"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/et_tanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edit_text"
            android:padding="12dp"
            android:focusable="false"
            android:drawableEnd="@drawable/ic_calendar"
            tools:text="15 Okt 2025" />

        <!-- Input Kategori -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Kategori"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edit_text">

            <Spinner
                android:id="@+id/spinner_kategori"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@android:color/transparent"/>

            <ImageButton
                android:id="@+id/btn_edit_kategori"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_edit"
                android:visibility="gone"
                tools:visibility="visible"/>
        </LinearLayout>


        <!-- Input Jumlah -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Jumlah"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/et_jumlah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edit_text"
            android:padding="12dp"
            android:inputType="numberDecimal"
            android:hint="Rp 0" />

        <!-- Input Keterangan -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Keterangan"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/et_keterangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edit_text"
            android:padding="12dp"
            android:hint="Opsional" />

        <!-- Bagian Foto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_ambil_foto"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Ambil Foto"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btn_pilih_galeri"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Pilih Galeri"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- ======================================================= -->
        <!-- GAMBAR DIPERKECIL -->
        <!-- ======================================================= -->
        <ImageView
            android:id="@+id/iv_preview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            tools:src="@tools:sample/avatars"
            tools:visibility="visible"/>
        <!-- ======================================================= -->


        <!-- Tombol Simpan -->
        <Button
            android:id="@+id/btn_simpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Simpan"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="@android:color/white"
            app:cornerRadius="8dp"/>

        <!-- Tombol Hapus -->
        <Button
            android:id="@+id/btn_hapus"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Hapus Transaksi"
            android:textColor="@android:color/holo_red_dark"
            android:visibility="gone"
            tools:visibility="visible"/>

    </LinearLayout>
</ScrollView>